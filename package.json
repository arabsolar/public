{
  "name": "solar-contracts",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "build": "yarn compile && yarn flatten",
    "compile": "npx hardhat compile",
    "flatten": "yarn dirs & yarn flatten1 & yarn flatten2 & yarn flatten3 & yarn flatten4 & yarn flatten5 & yarn flatten6 & yarn flatten7 & yarn flatten8 & yarn flatten9",
    "dirs": "npx hardhat mkdir contracts-flatten",
    "flatten1": "npx hardhat flat contracts/SolarStaking.sol > contracts-flatten/SolarStaking.sol",
    "flatten2": "npx hardhat flat contracts/SolarToken.sol > contracts-flatten/SolarToken.sol",
    "flatten3": "npx hardhat flat contracts/BUSD_TestToken.sol > contracts-flatten/BUSD_TestToken.sol",
    "flatten4": "npx hardhat flat contracts/USDT_TestToken.sol > contracts-flatten/USDT_TestToken.sol",
    "flatten5": "npx hardhat flat contracts/XRP_TestToken.sol > contracts-flatten/XRP_TestToken.sol",
    "flatten6": "npx hardhat flat contracts/DAI_TestToken.sol > contracts-flatten/DAI_TestToken.sol",
    "flatten7": "npx hardhat flat contracts/BTCB_TestToken.sol > contracts-flatten/BTCB_TestToken.sol",
    "flatten8": "npx hardhat flat contracts/USDC_TestToken.sol > contracts-flatten/USDC_TestToken.sol",
    "flatten9": "npx hardhat flat contracts/SecretTokenClaim.sol > contracts-flatten/SecretTokenClaim.sol",
    "test": "npx hardhat test"
  },
  "devDependencies": {
    "@chainlink/contracts": "^0.8.0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.6",
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.10",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.6",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomicfoundation/hardhat-ignition": "^0.15.1",
    "@nomicfoundation/ignition-core": "^0.15.1",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.0",
    "@openzeppelin/contracts": "^4.9.2",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.14",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.12.7",
    "dotenv": "^16.4.5",
    "chai": "^4.3.10",
    "ethers": "^6.12.0",
    "hardhat": "^2.22.3",
    "hardhat-gas-reporter": "^2.1.1",
    "mocha": "^10.4.0",
    "solidity-coverage": "^0.8.12",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.4.5",
    "@uniswap/v3-core": "Uniswap/v3-core#0.8",
    "@uniswap/v3-periphery": "Uniswap/v3-periphery#0.8"
  }
}
